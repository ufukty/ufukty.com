{{define "markdown-page"}}
<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{.Node.Title}}</title>

    <meta name="title" content="Ufuktan Yıldırım">

    {{template "favicons"}}
    {{template "social-cards"}}

    {{with .Stylesheets}}
    {{range .}}
    <link rel="stylesheet" href="{{.}}">{{end}}
    {{end}}

    {{template "tags" .}}
  </head>

  <body>
    {{template "nav" .}}

    {{with .Markdown}}{{with .Toc}}
    <aside id="toc">
      {{with .Children}}{{with (index . 0)}}
      <ul>
        {{range .Children}}
        <li><a href="#{{.ID}}" class="toc{{.Level}}">{{.Title}}</a></li>
        {{end}}
        <li><a href="#">↑</a></li>
      </ul>
      {{end}}{{end}}
    </aside>
    {{end}}{{end}}

    <main>{{.Markdown.Content}}</main>
  </body>

</html>
{{end}}