{{define "title"}}{{.Node.Title}}{{end}}

{{define "page"}}
<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{template "title" .}}</title>

    <meta name="title" content="Ufuktan Yıldırım">

    {{template "favicons"}}

    {{with .Stylesheets}}
    {{range .}}
    <link rel="stylesheet" href="{{.}}">{{end}}
    {{end}}
  </head>

  <body>
    {{template "nav" .}}
    {{template "toc" .}}

    <main>{{template "page-content" .}}</main>
  </body>

</html>
{{end}}

{{define "markdown-page"}}{{template "page" .}}{{end}}
{{define "page-content"}}{{trustedHtml .Markdown.Content}}{{end}}